# AI Avatar Livestream Platform - Environment Variables
# Copy this file to .env.local and fill in your API keys

# ================================
# Server Configuration
# ================================
PORT=3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ================================
# AI Avatar Services
# ================================

# HeyGen - AI Avatar Video Generation
# Get your key at: https://app.heygen.com/settings
HEYGEN_API_KEY=your_heygen_api_key_here

# D-ID - Alternative Avatar Provider (optional)
# Get your key at: https://studio.d-id.com/account-settings
DID_API_KEY=your_did_api_key_here

# ================================
# Text-to-Speech
# ================================

# ElevenLabs - High Quality TTS
# Get your key at: https://elevenlabs.io/speech-synthesis
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ================================
# AI & Language Models
# ================================

# OpenAI - Chat, Moderation, Script Generation
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (optional alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ================================
# Streaming Platforms
# ================================

# YouTube Live
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# Twitch
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# Facebook Live
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# TikTok
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# ================================
# Database (Optional - for production)
# ================================

# PostgreSQL / Neon Database
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# ================================
# Authentication (Optional)
# ================================

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# ================================
# Storage (Optional)
# ================================

# AWS S3 for video/audio storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# ================================
# Analytics (Optional)
# ================================

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# Google Analytics
NEXT_PUBLIC_GA_ID=your_ga_id
