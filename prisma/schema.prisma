// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  
  accounts      Account[]
  sessions      Session[]
  streams       Stream[]
  preferences   UserPreference?
  apiKeys       ApiKey[]
  notifications Notification[]
  auditLogs     AuditLog[]
  subscriptions Subscription[]
  transactions  Transaction[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  paypalHandle      String?   @db.VarChar(100)
  cashappHandle     String?   @db.VarChar(100)
  venmoHandle       String?   @db.VarChar(100)
  zelleHandle       String?   @db.VarChar(100)
  chimeHandle       String?   @db.VarChar(100)
  instagramStreamKey String?  @db.VarChar(255)
  tiktokStreamKey   String?   @db.VarChar(255)
  facebookStreamKey String?   @db.VarChar(255)
  youtubeStreamKey  String?   @db.VarChar(255)
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
  ENTERPRISE
}

model UserPreference {
  id                String  @id @default(cuid())
  userId            String  @unique
  theme             String  @default("dark")
  language          String  @default("en")
  emailNotifications Boolean @default(true)
  pushNotifications  Boolean @default(true)
  marketingEmails   Boolean @default(false)

  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Stream Platform Models
model Stream {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  status      String   @default("scheduled") // scheduled, preparing, live, ended
  quality     String   @default("1080p30")
  aiDirectorEnabled Boolean @default(false)
  latestAiInsights  Json?
  
  startedAt   DateTime?
  endedAt     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  streamingToInstagram    Boolean  @default(false)
  streamingToTiktok       Boolean  @default(false)
  streamingToFacebook     Boolean  @default(false)
  streamingToYoutube      Boolean  @default(false)

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  platforms      Platform[]
  scenes         Scene[]
  chatMessages   ChatMessage[]
  guests         Guest[]
  analytics      Analytics[]
  avatarSessions AvatarSession[]
  directorEvents DirectorEvent[]
}

model DirectorEvent {
  id        String   @id @default(cuid())
  streamId  String
  timestamp DateTime @default(now())
  type      String   // info, success, warning, error
  message   String   @db.Text
  metadata  Json?    // Stores suggestion details like confidence, reasoning

  stream    Stream   @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model Platform {
  id           String @id @default(cuid())
  streamId     String
  name         String // youtube, twitch, facebook, tiktok, custom
  rtmpUrl      String?
  streamKey    String?
  status       String @default("disconnected") // disconnected, connected, streaming, error
  viewerCount  Int    @default(0)
  chatEnabled  Boolean @default(true)

  stream       Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model Scene {
  id                 String @id @default(cuid())
  streamId           String
  name               String
  layout             String // single, side-by-side, pip, grid, custom
  order              Int    @default(0)
  isActive           Boolean @default(false)
  transitionType     String @default("fade") // cut, fade, slide, zoom
  transitionDuration Int    @default(300)

  stream       Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id          String   @id @default(cuid())
  streamId    String
  platform    String
  username    String
  userAvatar  String?
  message     String   @db.Text
  timestamp   DateTime @default(now())
  badges      String[]
  highlighted Boolean  @default(false)
  moderated   Boolean  @default(false)
  
  donationAmount   Float?
  donationCurrency String?

  stream       Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model Guest {
  id          String  @id @default(cuid())
  streamId    String
  name        String
  email       String?
  inviteCode  String  @unique
  status      String  @default("invited") // invited, waiting, connected, disconnected
  videoEnabled Boolean @default(true)
  audioEnabled Boolean @default(true)

  stream       Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model Analytics {
  id               String   @id @default(cuid())
  streamId         String
  timestamp        DateTime @default(now())
  viewers          Int      @default(0)
  chatMessages     Int      @default(0)
  reactions        Int      @default(0)
  shares           Int      @default(0)
  newFollowers     Int      @default(0)
  platformData     Json?    // Specific viewers per platform

  stream       Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model AvatarSession {
  id           String   @id @default(cuid())
  streamId     String
  avatarId     String
  provider     String   // heygen, d-id
  sessionToken String?
  status       String   @default("idle") // idle, speaking, processing, error
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  stream       Stream   @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

// Enterprise components
model ApiKey {
  id        String   @id @default(cuid())
  userId    String
  key       String   @unique
  name      String
  scopes    String[] // read:streams, write:streams, etc.
  lastUsed  DateTime?
  expiresAt DateTime?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // info, system, payment, security
  title     String
  message   String   @db.Text
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String   // USER_LOGIN, STREAM_START, PAYMENT_SUCCESS
  entity    String   // user, stream, transaction
  entityId  String?
  metadata  Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String
  status               String   // active, canceled, past_due, trialing
  planId               String   // free, pro, enterprise
  stripeSubscriptionId String?  @unique
  stripeCustomerId     String?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transaction {
  id               String   @id @default(cuid())
  userId           String
  amount           Float
  currency         String   @default("USD")
  status           String   // succeeded, pending, failed
  stripePaymentId  String?  @unique
  items            Json?
  createdAt        DateTime @default(now())

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
