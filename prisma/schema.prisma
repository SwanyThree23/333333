// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  streams       Stream[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Stream Platform Models
model Stream {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  status      String   @default("scheduled") // scheduled, preparing, live, ended
  quality     String   @default("1080p30")
  thumbnail   String?
  
  startedAt   DateTime?
  endedAt     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  platforms      Platform[]
  scenes         Scene[]
  chatMessages   ChatMessage[]
  guests         Guest[]
  analytics      Analytics[]
  avatarSessions AvatarSession[]
}

model Platform {
  id           String @id @default(cuid())
  streamId     String
  name         String // youtube, twitch, facebook, tiktok, custom
  rtmpUrl      String?
  streamKey    String?
  status       String @default("disconnected") // disconnected, connected, streaming, error
  viewerCount  Int    @default(0)
  chatEnabled  Boolean @default(true)

  stream       Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model Scene {
  id                 String @id @default(cuid())
  streamId           String
  name               String
  layout             String // single, side-by-side, pip, grid, custom
  order              Int    @default(0)
  isActive           Boolean @default(false)
  transitionType     String @default("fade") // cut, fade, slide, zoom
  transitionDuration Int    @default(300)

  stream       Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id          String   @id @default(cuid())
  streamId    String
  platform    String
  username    String
  userAvatar  String?
  message     String   @db.Text
  timestamp   DateTime @default(now())
  badges      String[]
  highlighted Boolean  @default(false)
  moderated   Boolean  @default(false)
  
  donationAmount   Float?
  donationCurrency String?

  stream       Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model Guest {
  id          String  @id @default(cuid())
  streamId    String
  name        String
  email       String?
  inviteCode  String  @unique
  status      String  @default("invited") // invited, waiting, connected, disconnected
  videoEnabled Boolean @default(true)
  audioEnabled Boolean @default(true)

  stream       Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model Analytics {
  id               String   @id @default(cuid())
  streamId         String
  timestamp        DateTime @default(now())
  viewers          Int      @default(0)
  chatMessages     Int      @default(0)
  reactions        Int      @default(0)
  shares           Int      @default(0)
  newFollowers     Int      @default(0)
  platformData     Json?    // Specific viewers per platform

  stream       Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model AvatarSession {
  id           String   @id @default(cuid())
  streamId     String
  avatarId     String
  provider     String   // heygen, d-id
  sessionToken String?
  status       String   @default("idle") // idle, speaking, processing, error
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  stream       Stream   @relation(fields: [streamId], references: [id], onDelete: Cascade)
}
